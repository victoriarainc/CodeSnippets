<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <title>Home Page</title>
  <link rel="stylesheet" href="/css/normalize.css">
  <link rel="stylesheet" href="/css/skeleton.css">
  <link rel='stylesheet' href='/css/styles.css'>
</head>

<body>
  <!-- nav -->
  <div class='container' id='nav'>
    <div class='row'>
      <div class='u-pull-right'>
        <a href="/logout" class='button'>Logout</a>
        <a href="/" class='button'>Home</a>
      </div>
    </div>
  </div>

    <!-- body -->
  <div class="container">
      <!-- header -->
    <h2>New Snippet</h2>
      <!-- form -->
    <form id="snippet_form" class="add" action="/snippets" method="post">
        <!-- title -->
      <div class='row'>
        <div class='twelve columns'>
          <label for="text">Title</label>
          <input class='add' id='text' type="text" name="title" value="{{snippet.title}}" placeholder="Title" />
        </div>
      </div>
          <!-- body -->
      <div class='row'>
        <div class='twelve columns'>
          <label for="body">Body</label>
          <textarea class='u-full-width' id='body' name="body" value="{{snippet.body}}" placeholder="Body"></textarea>
        </div>
      </div>
          <!-- notes -->
      <div class='row'>
        <div class='six columns'>
          <label for="notes">Notes</label>
          <textarea class='u-full-width' id='notes' name="notes" value="{{snippet.notes}}" placeholder="Notes"></textarea>
        </div>
          <!-- language -->
        <div class='six columns'>
          <label for="language">Language</label>
          <input class='u-full-width' id='language' type="text" name="language" value="{{snippet.language}}" placeholder="Language" />
        </div>
      </div>
          <!-- tags -->
      <div class='row'>

            <label for="tags">Tags</label>
              <!-- tags fetched from database -->
              <div id="tag_container">
             {{#snippet.tags}}
             <div class="tag_wrapper">
               <input class='add tags' type="array" id="tag{{@index}}" name="tags[]" value="{{.}}" />
               <button type="button" class="tag_remove tag_button">-</button>
             </div>
             {{/snippet.tags}}
           </div>
            <div class="tag_wrapper">
             <input class='add tags' type="array" id="tag_add" value="" />
             <button type="button" class="tag_add tag_button">+</button>
           </div>
          {{#if snippet._id}}
            <input type="hidden" name="_id" value="{{snippet._id}}" />
          {{/if}}

            <br/>


          <!-- delete and submit buttons -->
        <div class="row">
          <div class="ten columns">
            <span class="button"><a href="/deleteSnippet/?id={{snippet._id}}">Delete Snippet</a></span>
          </div>

          <div class="one column">
            <button class="button-primary" name="add">Submit</button>
          </div>
        </div>

    </form>
  </div>
  <script src="/js/snippets.js"></script>
</body>

</html>
